<% layout("layouts/boilerplate") %>
<style>
    /* General Styling */
body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f9fa;
    color: #343a40;
    line-height: 1.6;
}

/* Profile Page Container */
.profile-page {
    max-width: 800px;
    margin: 5rem auto; /* Center the content */
    padding: 2rem;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 1px solid #dee2e6;
}

/* Page Title */
.profile-page h1 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
    color: #007bff;
    text-transform: uppercase;
}

/* Section Styling */
.info-section {
    margin-bottom: 1.5rem;
}

.info-section h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: #495057;
    border-bottom: 2px solid #007bff;
    padding-bottom: 0.25rem;
}

.info-section p {
    margin: 0.5rem 0;
    font-size: 1rem;
}

/* Highlight Strong Text */
.info-section p strong {
    color: #495057;
    font-weight: bold;
}

/* Links Section */
.links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.links a {
    display: inline-block;
    text-decoration: none;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    color: #ffffff;
    background-color: #007bff;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.links a:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
}

.links a:active {
    transform: translateY(0);
}

/* Responsive Design */
@media (max-width: 768px) {
    .profile-page {
        padding: 1rem;
    }

    .info-section h3 {
        font-size: 1.1rem;
    }

    .links a {
        font-size: 0.9rem;
        padding: 0.4rem 0.8rem;
    }
}

</style>
<div class="profile-page">
    <h1>Profile Information</h1>
    <h2><%= user.name %></h2>
    <div class="info-section">
        <h3>Contact Information</h3>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Contact:</strong> <%= user.profile.contact %></p>
    </div>
    <div class="info-section">
        <h3>Academic Details</h3>
        <p><strong>Department:</strong> <%= user.profile.department %></p>
        <p><strong>Year:</strong> <%= user.profile.year %></p>
    </div>
    <div class="info-section">
        <h3>Links</h3>
        <div class="links">
            <a href="<%= user.profile.resumeUrl %>" target="_blank">View Resume</a>
            <a href="<%= user.profile.linkedinUrl %>" target="_blank">LinkedIn Profile</a>
            <a href="<%= user.profile.portfolioUrl %>" target="_blank">Portfolio</a>
        </div>
    </div>
    <div class="info-section">
        <h3>Role & Account</h3>
        <p><strong>Role:</strong> <%= user.role %></p>
        <p><strong>Created At:</strong> <%= new Date(user.createdAt).toLocaleString() %></p>
        <p><strong>Updated At:</strong> <%= new Date(user.updatedAt).toLocaleString() %></p>
    </div>
</div>
