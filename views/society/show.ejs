        <div class="container society-container mt-5">
            <img class="img-hero" src="<%= society.logo %>" alt="alt">
            <!-- Society Header -->
            <div class="hero" id="about">
                <div class="floating-hero">
                    <h1>
                        <%= society.name %>
                    </h1>
                    <p>
                        <%= society.description %>
                    </p>
                    <% if (Array.isArray(Sadmin) && Sadmin.some(admin => admin.society == society._id)) { %>
                        <button class="edit-button submit-button" onclick="openModal('modalSocietyHeader')">Edit</button>
                    <% } %>
                    
                </div>
            </div>
            <br><br><br>

            <!-- Faculty Advisor -->
            <div class="floating-card">
                <h3>Faculty Advisor</h3>
                <p><strong>Name:</strong>
                    <%= society.facultyAdvisor?.name || '' %>
                </p>
                <p><strong>Email:</strong>
                    <%= society.facultyAdvisor?.email || '' %>
                </p>
                <p><strong>Phone no</strong>
                    <%= society.facultyAdvisor?.phone || '' %>
                </p>
                <% if (Array.isArray(Sadmin) && Sadmin.some(admin => admin.society == society._id)) { %>
                    <button class="edit-button submit-button" onclick="openModal('modalFacultyAdvisor')">Edit</button>
                    <% } %>
            </div>


            <!-- Society Admins -->
            <div class="floating-card">
                <h3>Society Admins</h3>
                <% society.societyAdmin.forEach(function(user){ %>
                    <div class="container">
                        <p><strong>Name</strong>
                            <%= user.name %>
                        </p>
                        <p><strong>Email</strong>
                            <%= user.email || '' %>
                        </p>
                        <% if (Sadmin !=null && Sadmin.some(admin => admin.society == society._id)&& !Sadmin.some(admin => admin.societyAdmin == user._id)) { %>
                            <form action="/society/<%= society._id %>/society-admin/<%= user._id %>?_method=DELETE"
                                method="POST">
                                <button class="delete-btn submit-button">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                            <% } %>
                    </div>

                    <% }); %>
                        <% if (Sadmin !=null && Sadmin.some(admin => admin.society == society._id)|| mainAdmin) { %>
                            <button class="edit-button" onclick="openModal('modalSocietyAdmins')">Add</button>
                            <% } %>
            </div>
            <div class="floating-card" id="announcements">
                <h3>Announcements</h3>
                <% society.announcements.forEach(function (announcement) { %>
                    <div>
                        <h4>
                            <%= announcement.title %>
                        </h4>
                        <p><strong>Content:</strong>
                            <%= announcement?.content || '' %>
                        </p>
                        <p><strong>Date:</strong>
                            <%= new Date(announcement?.date || '' ).toLocaleDateString() %>
                        </p>

                        <% if (Sadmin !=null && Sadmin.some(admin => admin.society == society._id)) { %>
                            <button class="btn edit-btn"
                                onclick="openModal('modaleditAnnouncement<%= announcement._id %>')"><i
                                    class="fas fa-edit"></i></button>
                            <form
                                action=<%=`/society/${society._id}/${announcement._id}/remove/announcement?_method=DELETE`%>
                                method="post">
                                <button class="delete-btn">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>

                            <div id="modaleditAnnouncement<%= announcement._id %>" class="modal">
                                <div class="modal-content">
                                    <span class="close"
                                        onclick="closeModal('modaleditAnnouncement<%= announcement._id %>')">&times;</span>
                                    <h2>Edit Announcement</h2>
                                    <form class="form-body"
                                        action=<%=`/society/${society._id}/announcement/${announcement._id}?_method=PUT`%>
                                        method="post">
                                        <label for="title<%= announcement._id %>">Title:</label>
                                        <input type="text" id="title<%= announcement._id %>" name="title" required
                                            value="<%= announcement.title %>">

                                        <label for="content<%= announcement._id %>">Content:</label>
                                        <textarea id="content<%= announcement._id %>" name="content"
                                            required><%= announcement.content %></textarea>

                                        <button type="submit">Save</button>
                                    </form>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <% }); %>

                        <% if (Sadmin !=null && Sadmin.some(admin => admin.society == society._id)) { %>
                            <button class="edit-button" onclick="openModal('modalAnnouncements')">Add</button>
                            <% } %>
            </div>
            <!-- Recruitments -->
            <div class="floating-card" id="recuritments">
                <h3>Recruitments</h3>
                <% society.recruitments.forEach(function (recruitment) { %>
                    <div>
                        <h4>
                            <%= recruitment.title %>
                        </h4>
                        <p><strong>Deadline:</strong>
                            <%= new Date(recruitment?.deadline || '' ).toLocaleDateString() %>
                        </p>
                        <% if (Sadmin !=null && Sadmin.some(admin => admin.society == society._id)) { %>
                            <button class=" btn edit-btn"
                                onclick="openModal('modaleditrecruitment<%= recruitment.recruitmentId._id %>')"><i
                                    class="fas fa-edit"></i></button>
                            <form
                                action=<%=`/society/${society._id}/recruitment/${recruitment.recruitmentId._id}/remove?_method=DELETE`%>
                                method="post">
                                <button class="btn delete-btn"><i class="fas fa-trash-alt"></i></button>
                            </form>

                            <div id="modaleditrecruitment<%= recruitment.recruitmentId._id %>" class="modal">
                                <div class="modal-content">
                                    <span class="close"
                                        onclick="closeModal('modaleditrecruitment<%= recruitment.recruitmentId._id %>')">&times;</span>
                                    <h2>Edit Announcement</h2>
                                    <form class="form-body"
                                        action=<%=`/society/${society._id}/recruitment/${recruitment.recruitmentId._id}?_method=PUT`%>
                                        method="post">
                                        <div class="form-group">
                                            <label for="title">Title:</label>
                                            <input type="text" id="title" name="title"
                                                value=<%=recruitment.recruitmentId.title %> required>
                                        </div>

                                        <!-- Description Field -->
                                        <div class="form-group">
                                            <label for="description">Description:</label>
                                            <textarea id="description" name="description"
                                                rows="4"><%= recruitment.recruitmentId.description %></textarea>
                                        </div>

                                        <!-- Eligibility Field -->
                                        <div class="form-group">
                                            <label for="eligibility">Eligibility:</label>
                                            <input type="text" id="eligibility" name="eligibility"
                                                value="<%= recruitment.recruitmentId.eligibility %>">
                                        </div>

                                        <!-- Deadline Field -->
                                        <div class="form-group">
                                            <label for="deadline">Deadline:</label>
                                            <input type="date" id="deadline" name="deadline" required
                                                value="<%= recruitment?.recruitmentId?.deadline?.toISOString().split('T')[0] || '' %>">

                                        </div>

                                        <!-- Submit Button -->
                                        <button type="submit" class="submit-button">Submit</button>
                                    </form>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <% }); %>
                        <% if (Array.isArray(Sadmin) && Sadmin.some(admin => admin.society == society._id)) { %>
                            <button class="edit-button" onclick="openModal('modalRecruitments')">Add</button>
                            <% } %>
            </div>
            <!-- Achievements -->
            <div class="floating-card" id="achievements">
                <h3>Achievements</h3>
                <% society.achievements.forEach(function (achievement) { %>
                    <div>
                        <h4>
                            <%= achievement.title %>
                        </h4>
                        <p><strong>Description:</strong>
                            <%= achievement?.description || '' %>
                        </p>
                        <p><strong>Date:</strong>
                            <%= achievement?.date ? new Date(achievement.date).toLocaleDateString() : 'N/A' %>
                        </p>

                        <% if (Sadmin !=null && Sadmin.some(admin => admin.society == society._id)) { %>
                            <!-- Unique modal ID -->
                            <button class="btn edit-btn"
                                onclick="openModal('modaleditAchievements<%= achievement._id %>')"><i
                                    class="fas fa-edit"></i></button>
                    </div>
                    <form action=<%=`/society/${society._id}/${achievement._id}/remove?_method=DELETE`%> method="post">
                        <button class="delete-btn">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                    <div id="modaleditAchievements<%= achievement._id %>" class="modal">
                        <div class="modal-content">
                            <span class="close"
                                onclick="closeModal('modaleditAchievements<%= achievement._id %>')">&times;</span>
                            <h2>Edit achievements: <%= achievement.title %>
                            </h2>
                            <form class="form-body"
                                action=<%=`/society/${society._id}/achievements/${achievement._id}?_method=PUT`%>
                                method="post">
                                <label for="societyDescription<%= achievement._id %>">Description:</label>
