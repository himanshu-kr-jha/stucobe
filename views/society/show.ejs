<% layout("layouts/boilerplate") %>

    <style>
        /* General Styles */


        /* Form Container */
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Form Title */
        .form-container h2 {
            text-align: center;
            font-size: 2rem;
            color: #333;
            margin-bottom: 1.5rem;
        }

        /* Form Label */
        label {
            font-size: 1rem;
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 0.5rem;
        }

        /* Form Input */
        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="number"],
        textarea {
            width: 100%;
            padding: 12px;
            margin: 8px 0 15px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
            color: #333;
            transition: border-color 0.3s ease;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus,
        input[type="number"]:focus,
        textarea:focus {
            border-color: #3498db;
            outline: none;
        }

        /* Textarea */
        textarea {
            resize: vertical;
            height: 150px;
        }

        /* Form Button */
        button[type="submit"] {
            background-color: #3498db;
            color: white;
            padding: 12px 25px;
            font-size: 1rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        button[type="submit"]:hover {
            background-color: #2980b9;
        }

        /* Form Error Message */
        .error-message {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: -12px;
            margin-bottom: 10px;
        }

        /* Form Success Message */
        .success-message {
            color: #2ecc71;
            font-size: 0.9rem;
            margin-top: 10px;
        }

        /* Form Checkbox */
        input[type="checkbox"] {
            margin-right: 10px;
        }

        /* Form Radio Buttons */
        input[type="radio"] {
            margin-right: 10px;
        }

        /* Form Select */
        select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
            color: #333;
            margin-bottom: 15px;
        }

        /* Form Group */
        .form-group {
            margin-bottom: 20px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .form-container {
                padding: 1.5rem;
            }

            .form-container h2 {
                font-size: 1.5rem;
            }

            button[type="submit"] {
                font-size: 1.1rem;
                padding: 10px 20px;
            }
        }

        /* Edit Button */
        .edit-btn {
            background-color: #4CAF50;
            /* Green */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .edit-btn:hover {
            background-color: #45a049;
            /* Darker Green on hover */
        }

        .edit-btn:focus {
            outline: none;
        }

        /* Delete Button */
        .delete-btn {
            background-color: #e74c3c;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .delete-btn:hover {
            background-color: #c0392b;
            /* Darker Red on hover */
        }

        .delete-btn:focus {
            outline: none;
        }

        /* Button Container (Optional) */
        .button-container {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        /* Button Alignment */
        .edit-btn,
        .delete-btn {
            width: auto;
        }


        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            /* Modern font */
            background: linear-gradient(to right, #f8f9fa, #e3f2fd);
            color: #2c3e50;
            margin: 0;
            /* padding: 1rem;    */
            line-height: 1.6;
        }

        /* Hero Section */
        .hero {
            position: relative;
            background: linear-gradient(145deg, #ffffff, #e0e0e0);
            border-radius: 15px;
            padding: 60px;
            text-align: center;
            box-shadow: 10px 10px 20px #d1d1d1, -10px -10px 20px #ffffff;
            overflow: hidden;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 20px;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
        }

        .hero p {
            font-size: 1.25rem;
            color: #7f8c8d;
            margin-bottom: 30px;
        }

        .img-hero {
            position: absolute;
            top: 23%;
            left: 5%;
            width: 120px;
            z-index: 100;
            height: auto;
            border-radius: 50%;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        /* Buttons */
        button {
            padding: 12px 24px;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        .edit-button {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #fff;
        }

        .edit-button:hover {
            background: linear-gradient(to right, #5a0db2, #1e63e0);
        }

        .delete-btn {
            background: linear-gradient(to right, #e74c3c, #c0392b);
            color: #fff;
        }

        .delete-btn:hover {
            background: linear-gradient(to right, #cf4432, #a63124);
        }

        /* Floating Card */
        .floating-card {
            background: linear-gradient(145deg, #ffffff, #e0e0e0);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 2rem;
            box-shadow: 10px 10px 20px #d1d1d1, -10px -10px 20px #ffffff;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .floating-card:hover {
            transform: translateY(-5px);
            box-shadow: 15px 15px 30px rgba(0, 0, 0, 0.1), -10px -10px 30px rgba(255, 255, 255, 0.7);
        }

        .floating-card h3 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #34495e;
        }

        .floating-card p {
            font-size: 1rem;
            color: #7f8c8d;
        }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 100;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            /* overflow: auto; */
            background: rgba(0, 0, 0, 0.5);
            padding-top: 6rem;
        }

        .modal-content {
            background: linear-gradient(145deg, #ffffff, #e0e0e0);
            border-radius: 20px;
            padding: 20px;
            width: 90%;
            max-width: 600px;
            margin: 0 auto;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            animation: slide-in 0.4s ease-out;
        }

        /* Animations */
        @keyframes slide-in {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .hero p {
                font-size: 1rem;
            }

            .floating-card {
                padding: 1rem;
            }
        }

        /* Form Section */
        .form-body {
            /* max-width: 500px; */
            /* margin: 2rem auto; */
            background: linear-gradient(145deg, #ffffff, #e0e0e0);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 10px 10px 20px #d1d1d1, -10px -10px 20px #ffffff;
        }

        .form-body h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 1.8rem;
            color: #34495e;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-body label {
            display: block;
            font-weight: 500;
            margin-bottom: 8px;
            color: #2c3e50;
            font-size: 1rem;
        }

        .form-body input,
        .form-body textarea {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 20px;
            border: none;
            border-radius: 8px;
            background: #f5f5f5;
            box-shadow: inset 5px 5px 10px #d9d9d9, inset -5px -5px 10px #ffffff;
            font-size: 1rem;
            color: #2c3e50;
            transition: all 0.3s ease;

        }

        .form-body input:focus,
        .form-body textarea:focus {
            outline: none;
            background: #e3f2fd;
            box-shadow: inset 2px 2px 5px #cfd8dc, inset -2px -2px 5px #ffffff;
        }

        .form-body textarea {
            resize: none;
            height: 150px;

        }

        .form-body .form-buttons {
            /* display: flex; */
            /* justify-content: space-between; */
            gap: 10px;
        }



        @media (max-width: 768px) {
            form {
                padding: 20px;
            }

            form button {
                font-size: 0.9rem;
                padding: 10px;
            }

            .form-buttons {
                flex-direction: column;
                align-items: center;
            }

            .form-buttons button {
                /* width: 100%; */
            }
        }

        /* General styles for the body */




        /* Form inputs */
        input[type="text"],
        textarea {
            width: 100%;
            /* padding: 10px; */
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        input[type="text"]:focus,
        textarea:focus {
            border-color: #6c63ff;
            outline: none;
            box-shadow: 0 0 5px rgba(108, 99, 255, 0.5);
        }



        /* Responsive design */
        @media (max-width: 768px) {

            .modal {
                width: 90%;
            }
        }

