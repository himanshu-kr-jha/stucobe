/* General Styles */
body {
    font-family: Arial, sans-serif;
    background: #f8f9fa;
    margin: 0;
    /* padding: 0; */
}

/* Form Container */
form {
    max-width: 500px;
    margin: 2rem auto;
    background: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    border: 1px solid #dee2e6;
}

/* Form Group */
.form-group {
    margin-bottom: 1.5rem;
}

/* Label */
label {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: block;
    color: #495057;
}

/* Inputs and Textarea */
input[type="text"], input[type="email"], textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    color: #495057;
    background-color: #ffffff;
    border: 1px solid #ced4da;
    border-radius: 5px;
    transition: all 0.3s ease;
}

textarea {
    resize: vertical;
    min-height: 100px;
}

/* Focus State */
input:focus, textarea:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
}

/* Submit Button */
button {
    width: 100%;
    padding: 0.75rem;
    background-color: #007bff;
    color: white;
    font-size: 1rem;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

button:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
}

button:active {
    transform: translateY(0);
}

/* Form Header */
form h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #343a40;
}

/* Placeholder Text */
input::placeholder, textarea::placeholder {
    font-style: italic;
    color: #adb5bd;
}

/* Error Message */
.error-message {
    color: #dc3545;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

/* Success Message */
.success-message {
    color: #28a745;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

</style>
<body>
    
<form action="/create-society" method="POST">
    <div class="form-group">
        <label for="name">Society Name</label>
        <input type="text" id="name" name="name" class="form-control" required placeholder="Enter Society Name">
    </div>
    
    <div class="form-group">
        <label for="description">Society Description</label>
        <textarea id="description" name="description" class="form-control" required placeholder="Enter Society Description" rows="4"></textarea>
    </div>
    
    <div class="form-group">
        <label for="societyAdminEmail">Society Admin Email</label>
        <input type="email" id="societyAdminEmail" name="societyAdminEmail" class="form-control" required placeholder="Enter Society Admin Email">
    </div>
    <div class="form-group">
        <label for="logo">Logo</label>
        <input type="text" id="logo" name="logourl" class="form-control" required placeholder="Logo URL">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</body>